{
  "name": "goomer-lista-rango",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "test:unit": "jest --testPathIgnorePatterns '/infra/*'",
    "test:e2e": "jest --testPathIgnorePatterns '^(?!.*/infra/).*$'",
    "test:cov": "jest --coverage --testPathIgnorePatterns '/infra/*'",
    "sonar": "sonar-scanner",
    "prepare": "husky",
    "lint": "biome lint ./src/*",
    "format": "biome format --write ./src/* ./tests/*",
    "fix": "biome check --write ./src/*"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-validator": "^0.4.2",
    "@prisma/client": "^6.2.1",
    "hono": "^4.6.16",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.17",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prisma": "^6.2.1",
    "sonar-scanner": "^3.1.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.7.1"
  }
}